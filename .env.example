# MongoDB Configuration
# The MongoDB connection string. For Docker setup, use mongodb://root:password123@mongodb:27017/?authSource=admin
# For local setup, use mongodb://localhost:27017/?authSource=admin
MONGO_URI="mongodb://root:password123@mongodb:27017/?authSource=admin"

# Flask Secret Key
# CRITICAL: This key is used to sign session cookies. Keep it secret!
# Generate a secure key using: python scripts/generate_keys.py
# Or manually: python -c "import secrets; print(secrets.token_hex(32))"
secret_key="REPLACE_WITH_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS"

# E-Invoice Encryption Key
# CRITICAL: This key encrypts your E-Invoice passwords in the database.
# Use the same generation method as secret_key above.
EINVOICE_SECRET_KEY="REPLACE_WITH_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS"

# E-Invoice Credentials (Optional - for testing)
# Your mobile barcode and verification code from the Taiwan E-Invoice platform
EINVOICE_USERNAME="YourPhone"
EINVOICE_PASSWORD="YourPassword"

# Security Settings (Production)
# Set to True when deploying with HTTPS
SESSION_COOKIE_SECURE=False

# IMPORTANT NOTES:
# 1. Never commit the actual .env file to version control
# 2. Make sure .env is listed in .gitignore
# 3. Rotate your secret keys periodically (every 3-6 months)
# 4. In production, always use HTTPS and set SESSION_COOKIE_SECURE=True
